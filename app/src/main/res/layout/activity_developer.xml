<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/button_back"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/left_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:fontFamily="@font/poppins_bolditalic"
            android:textSize="20sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textMissionTitle"
                            android:text="Our Mission"
                            android:textSize="24sp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#0288D1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true" />

                        <ImageButton
                            android:id="@+id/btnToggleMission"
                            android:scaleType="fitCenter"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Expand mission details" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textMissionDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We aim to provide medication reminders that improve health and simplify lives. Our app is designed to help users maintain their medication schedules with ease and efficiency."
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textVisionTitle"
                            android:text="Our Vision"
                            android:textSize="24sp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#0288D1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true" />

                        <ImageButton
                            android:id="@+id/btnToggleVision"
                            android:scaleType="fitCenter"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Expand vision details" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textVisionDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We envision a future where medication adherence is no longer a challenge. Together, we can achieve better health outcomes and empower individuals to take control of their well-being."
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:paddingTop="8dp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textTeamHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet Our Team"
                android:textSize="24sp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_bolditalic"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDev1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentStart="true"
                            android:gravity="center_vertical">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/imageDev1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/clintpfp"
                                android:background="@drawable/circle_background"
                                android:scaleType="centerCrop"
                                android:elevation="4dp"
                                app:shapeAppearanceOverlay="@style/CircleImageView" />

                            <TextView
                                android:id="@+id/textDev1Name"
                                android:text="Clint R. Perales"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginStart="26dp"
                                android:textColor="@color/text_primary"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnToggleDev1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_expand_more"
                            android:scaleType="fitCenter"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Expand developer details" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textDev1Bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:text="Hi, I'm Clint, living in Labangon, Cebu. I love reading books, listening to J-pop music, and working out. I'm passionate about creating apps that make a positive impact on people's lives."
                        android:fontFamily="@font/poppins_light"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentStart="true"
                            android:gravity="center_vertical">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/imageDev2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/christian_pfop"
                                android:background="@drawable/circle_background"
                                android:scaleType="centerCrop"
                                android:elevation="4dp"
                                app:shapeAppearanceOverlay="@style/CircleImageView"/>

                            <TextView
                                android:id="@+id/textDev2Name"
                                android:text="Christian Gorre"
                                android:layout_marginStart="26dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/text_primary"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnToggleDev2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Expand developer details" />
                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/text_secondary"
                        android:id="@+id/textDev2Bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A passionate developer who brings innovative ideas and technical expertise to our team. Focused on creating intuitive user experiences and robust software solutions."
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_light"
                        android:visibility="gone"
                        android:paddingTop="12dp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>